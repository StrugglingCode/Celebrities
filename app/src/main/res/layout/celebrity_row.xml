<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" android:background="@drawable/gradient_color">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/angelina_jolie" android:id="@+id/actor_image1"
            android:layout_weight="1"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="Actor Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/lbl_ActorName" android:paddingLeft="15dp"
                android:textStyle="bold" android:textSize="20sp"/>
        <TextView
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lbl_ActorDes" android:paddingLeft="15dp"
                android:textSize="15sp" android:textStyle="bold|italic"/>
    </LinearLayout>
</LinearLayout>